<% if @room.errors.any? %>

$(".notice").remove();

$("#r-num-block").append('<div class="notice"><%= escape_javascript(@errorNum[0])%></div>');

$("#r-img-block").append('<div class="notice"><%= escape_javascript(@errorImg[0])%></div>');

$("#r-sz-block").append('<div class="notice"><%= escape_javascript(@errorSize[0])%></div>');

$("#r-sv1-block").append('<div class="notice"><%= escape_javascript(@errorService1[0])%></div>');

$("#r-sv2-block").append('<div class="notice"><%= escape_javascript(@errorService2[0])%></div>');

$("#r-sv3-block").append('<div class="notice"><%= escape_javascript(@errorService3[0])%></div>');

<% else %>

  $('#roomBody').append("<%= escape_javascript render('room_row', room: @room) %>");

  $('.nw-r-close').click();

<% end %>