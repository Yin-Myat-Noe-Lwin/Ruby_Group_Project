<%= form_with  model: @room_type , local: false  do |form| %>

  <div class="form-gp">
  <%= form.label :query, "Room Type Name"  %><br>
  <%= form.text_field :name , class: 'form-input'  %><br>
  <span id = "rt-name-block"></span>
  </div>
  
  <div class="form-gp">
  <%= form.label :query, "Maximum Capacity"    %><br>
  <%= form.number_field :max_capacity , class: 'form-input' %><br>
  <span id = "rt-cap-block" ></span>
  </div>

  <%= form.label :query, "Room Type Image"  %><br>
  <%= form.file_field :room_type_img , accept:'image/*', class: 'form-input'  %><br><br>
  <span id = "rt-img-block" ></span>

</div>
			<div class="modal_footer">
				<div class="modal_btn_grp">
          <%= form.submit "Create" ,  class:"btn btn_confirm"  %>
          </div>
			</div>
 
<% end %>