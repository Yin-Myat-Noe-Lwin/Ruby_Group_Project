<section class = "sec-sign">

  <div>

  <header>
      <%= render "home/nav" %>
  </header>

  <div class = 'l-inner clearfix'>

    <div class = "form">

      <div class = "align">

        <div class="login-form">

          <%= form_with  model: @user  do |form| %>

            <div class="form-div">
              <%= form.label :query, "Name:" , id: 'name-space' %>
              <%= form.text_field :name  %><br>
            </div>

            <div class="form-div">
              <%= form.label :query, "E-Mail Address:" , id: 'email-space' %>
              <%= form.email_field :email  %><br>
            </div>

            <div class="form-div">
              <%= form.label :query, "Password:"  , id: 'psw-space' %>
              <%= form.password_field :password  %><br>
            </div>

            <div class="form-div">
              <%= form.label :query, "Password Confirm:"  %>
              <%= form.password_field :password_confirmation  %><br>
            </div>
            
            <div class="form-div">
              <%= form.label :query, "Type:"  , id: 'type-space' %>
              <%= form.select :user_type, [["User", "1"], ["Admin", "0"]]  %><br><br>
            </div>

            <div class="form-div-file">
              <%= form.label :query, "Profile:"  , id: 'pf-space' %>
              <%= form.file_field :profile , accept:'image/*'  %><br><br>
            </div>

            <%= form.submit "Register" , id: 'register '  , class: 'register-btn'  %>

          <% end %>

        </div>

      </div>

        <%= link_to 'Already signed up?' , login_path , class: 'login-btn'%>

      </div>

    </div>

  </div>

</section>

<%= render "home/footer" %>