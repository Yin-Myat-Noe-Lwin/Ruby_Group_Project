          <h4><%= food_type.name %></h4>
        </div>
      <% end %>
    </div>
    </div>
    </div>
    </div>
    <% elsif @food_types.count == 0 %>
      <h1 class="unavail-rt">No available food type</h1>
    <% else %>
      <div class="clearfix">
        <div class="menu-blk">
          <% @food_types.each do |food_type| %>
            <div class="each-item item">
              <%= image_tag(food_type.food_type_img, :alt => "img" , class: 'img-blk' ) %>
              <h4><%= food_type.name %>
              <%= link_to 'View Details', view_food_path(food_type) , class: 'common-btn' %></h4>
            </div>
