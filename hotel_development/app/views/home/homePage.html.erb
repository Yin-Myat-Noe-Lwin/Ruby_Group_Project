        </div>
    </div>
  <% end %> 
  
</section><!-- /.sec-menu -->

<%= render "footer" %>

<script>

  setTimeout("$('.error-msg').fadeOut('slow')", 3000);
  setTimeout("$('.ok-msg').fadeOut('slow')", 3000);

  $(".move-icon2").click(function(){

    $('.error-msg').hide();

  });

  $(".move-icon2").click(function(){

    $('.ok-msg').hide();

  });

  $('#owl-one').owlCarousel({

    center: true,
    items: 3,
    loop: true,
    margin: 50,
    autoplay: true,
    nav    : true,
    navText : ["<i class='bx bx-chevron-left nav-btn prev-slide'></i>","<i class='bx bx-chevron-right nav-btn next-slide'></i>"],
    responsive: {
      0: {
        items: 1
      },
      600: {
        items: 2
      },
      1000: {
        items: 3,
      }
    }

  });

  jQuery("#carousel").owlCarousel({
    autoplay: true,
    loop: true, 
    margin: 50,
    nav: true,
    items: 3,
    navText : ["<i class='bx bx-chevron-left nav-btn2 prev-slide2'></i>","<i class='bx bx-chevron-right nav-btn2 next-slide2'></i>"],
    responsive: {
      0: {
        items: 1
      },
  
      600: {
        items: 2
      },
  
      1024: {
        items: 3
      },
  
      1366: {
        items: 3
      }
    }
  });

  function openMenu(evt, menuName) {

    var i, tabcontent, tablinks;

    tabcontent = document.getElementsByClassName("tabcontent");

    for (i = 0; i < tabcontent.length; i++) {

      tabcontent[i].style.display = "none";

    }

    tablinks = document.getElementsByClassName("tablinks");

    for (i = 0; i < tablinks.length; i++) {

      tablinks[i].className = tablinks[i].className.replace(" active", "");
    
    }
    document.getElementById(menuName).style.display = "block";

    evt.currentTarget.className += " active";

  }

  document.getElementById("defaultOpen").click();

</script>