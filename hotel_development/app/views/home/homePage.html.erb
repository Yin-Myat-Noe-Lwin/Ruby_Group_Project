    <div class="myAlert-top2 error-msg">
      <strong><%= msg %> <i class='bx bx-x move-icon2' ></i> </strong>
    </div>
  
    <% else %>
  
    <div class="myAlert-top2 ok-msg">
      <strong><%= msg %><i class='bx bx-x move-icon2' ></i></strong>
