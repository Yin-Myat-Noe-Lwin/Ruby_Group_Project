<section class = "sec-room" id="rooms">
  <div class = "l-inner">
    <div class = "txt-blk">
      <h3 class = "cmn-ttl"> Rooms & Suites </h3>
      <p>
      RHotel provides a comprehensive range of spaces to satisfy the various needs of<br> all of our guests.
      Discover rooms with fantastic views of Kawthaung.
      </p>
    </div>
    <% if @room_types.count > 2 %>
      <div id ="owl-one" class =  "owl-carousel room-blk">
        <% @room_types.each do |room_type| %>
        <div class="item">
          <%= image_tag(room_type.room_type_img, :alt => "img" , class: 'img-blk' ) %>
          <h4><%= room_type.name %></h4>
          <%= link_to 'View Details', view_room_path(room_type) , class: 'common-btn' %>
         </div>
        <% end %>
      </div>
      <div class="owl-dots">
     
      </div>
      <% elsif @room_types.count == 0 %>
        <h1 class="unavail-rt">No available room type</h1>
      <% else %>
        <div class="clearfix">
          <div class="room-blk">
            <% @room_types.each do |room_type| %>
              <div class="each-item item">
                <%= image_tag(room_type.room_type_img, :alt => "img" , class: 'img-blk' ) %>
                <h4><%= room_type.name %></h4>
                <%= link_to 'View Details', view_room_path(room_type) , class: 'common-btn' %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
</div>
</section><!-- /.sec-room -->

