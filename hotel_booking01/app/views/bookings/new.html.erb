<h1>Reserve a Room</h1>

<%= render 'users/nav' %>

<% if  @reservation.errors.full_messages.any? %>
  <% @reservation.errors.full_messages.each do |error_message| %>
    <div> <ul><li><%= error_message  %></li></ul></div>
  <% end %>
<% end %>

<%= form_with  model: @reservation do |form| %>

  <%= form.label :query, "Check in"  %><br>
  <%= form.date_field :check_in , :value => params[:check_in]  %><br>

  <%= form.label :query, "Check out"  %><br>
  <%= form.date_field :check_out , :value => params[:check_out] %><br>

  <%= form.label :query, "Number of people"  %><br>
  <%= form.number_field :num_of_ppl, min:1, max:10 , :value => params[:num_of_ppl] %><br>

  <%= form.label :query, "Room"  %><br>
  <%= form.text_field :room_id, :value => params[:room_id] %><br><br>

  <%= form.submit "Book now!!"   %>
 
<% end %>