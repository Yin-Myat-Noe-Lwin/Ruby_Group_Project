<%= form_with  do |form|  %>

  <%= form.label :query, "Check in"  %><br>
  <%= form.date_field :check_in   %><br>

  <%= form.label :query, "Check out"  %><br>
  <%= form.date_field :check_out  %><br>

  <%= form.label :query, "Number of people"  %><br>
  <%= form.number_field :num_of_ppl, min:1, max:10 %><br>

  <%= form.label :query, "Room Type"  %><br>
  <%= form.collection_select(:room_type_id, RoomType.all, :id, :name) %>
  
  <%= form.submit "Check Availability"   %>
 
<% end %>